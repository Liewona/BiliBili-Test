<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="@dimen/dp_10"
    android:background="@drawable/chase_hot_bg"
    >

    <TextView
        android:id="@+id/show_tile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        android:text="热门番剧"
        android:textColor="@color/colorBlack">

    </TextView>
   <RelativeLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="15dp"
       >


       <com.makeramen.roundedimageview.RoundedImageView
           android:id="@+id/showOne_iamge"
           android:layout_width="130dp"
           android:layout_height="80dp"
           android:scaleType="centerCrop"
           android:src="@mipmap/roundplay_2"
           app:riv_corner_radius_bottom_left="@dimen/chase_showImageBG"
           app:riv_corner_radius_bottom_right="@dimen/chase_showImageBG"
           app:riv_corner_radius_top_left="@dimen/chase_showImageBG"
           app:riv_corner_radius_top_right="@dimen/chase_showImageBG">

       </com.makeramen.roundedimageview.RoundedImageView>

       <ImageView
           android:id="@+id/im_heart"
           android:layout_width="14dp"
           android:layout_height="14dp"
           android:scaleType="centerCrop"
           android:src="@mipmap/heart"
           android:layout_marginTop="2dp"
           android:layout_marginLeft="2dp"
           >
       </ImageView>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginLeft="85dp"
           android:layout_marginTop="3dp"
           android:text="会员专享"
           android:textSize="10dp"
           android:textColor="@color/colorWrite"
           android:background="@drawable/share_icon"

           >


       </TextView>

       <RelativeLayout
           android:id="@+id/show_1_content"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_toRightOf="@id/showOne_iamge"
           android:layout_marginLeft="5dp"
           >
           <TextView
               android:id="@+id/show_1_tv_content"
               android:layout_width="115dp"
               android:layout_height="wrap_content"
               android:text="命运——官微第一次来就挑战我们吧"
               android:textSize="11dp"
               android:textColor="@color/colorBlack"
               android:maxLines="2"
               android:layout_marginLeft="3dp"
               >
           </TextView>

           <TextView
               android:id="@+id/show_1_tv_nums"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="940208"
               android:textSize="9dp"
               android:textColor="@color/moreDarkblack"
               android:layout_below="@+id/show_1_tv_content"
               android:layout_marginTop="38dp"
               >
           </TextView>

           <TextView
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="综合评分"
               android:textSize="9dp"
               android:textColor="@color/moreDarkblack"
               android:layout_toRightOf="@+id/show_1_tv_nums"
               android:layout_below="@+id/show_1_tv_content"
               android:layout_marginTop="38dp"
               android:layout_marginLeft="@dimen/dp_10"
               >
           </TextView>

       </RelativeLayout>


       <ImageView
           android:layout_width="30dp"
           android:layout_height="30dp"
           android:layout_toRightOf="@+id/show_1_content"
           android:layout_marginLeft="20dp"
           android:src="@mipmap/num1"
           >

       </ImageView>


   </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        >


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/showtwo_iamge"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/roundplay_2"
            app:riv_corner_radius_bottom_left="@dimen/chase_showImageBG"
            app:riv_corner_radius_bottom_right="@dimen/chase_showImageBG"
            app:riv_corner_radius_top_left="@dimen/chase_showImageBG"
            app:riv_corner_radius_top_right="@dimen/chase_showImageBG">

        </com.makeramen.roundedimageview.RoundedImageView>

        <ImageView
            android:id="@+id/im_heart2"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/heart"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            >
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="3dp"
            android:text="会员抢先"
            android:textSize="10dp"
            android:textColor="@color/colorWrite"
            android:background="@drawable/share_icon"

            >


        </TextView>

        <RelativeLayout
            android:id="@+id/show_2_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/showtwo_iamge"
            android:layout_marginLeft="5dp"
            >
            <TextView
                android:id="@+id/show_2_tv_content"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:text="命运——官微第一次来就挑战我们吧"
                android:textSize="11dp"
                android:textColor="@color/colorBlack"
                android:maxLines="2"
                android:layout_marginLeft="3dp"
                >
            </TextView>

            <TextView
                android:id="@+id/show_2_tv_nums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="940208"
                android:textSize="9dp"
                android:textColor="@color/moreDarkblack"
                android:layout_below="@+id/show_2_tv_content"
                android:layout_marginTop="38dp"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="综合评分"
                android:textSize="9dp"
                android:textColor="@color/moreDarkblack"
                android:layout_toRightOf="@+id/show_2_tv_nums"
                android:layout_below="@+id/show_2_tv_content"
                android:layout_marginTop="38dp"
                android:layout_marginLeft="@dimen/dp_10"
                >
            </TextView>

        </RelativeLayout>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/show_2_content"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/num2"
            >

        </ImageView>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        >


        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/show3_iamge"
            android:layout_width="130dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/roundplay_2"
            app:riv_corner_radius_bottom_left="@dimen/chase_showImageBG"
            app:riv_corner_radius_bottom_right="@dimen/chase_showImageBG"
            app:riv_corner_radius_top_left="@dimen/chase_showImageBG"
            app:riv_corner_radius_top_right="@dimen/chase_showImageBG">

        </com.makeramen.roundedimageview.RoundedImageView>

        <ImageView
            android:id="@+id/im_heart3"
            android:layout_width="14dp"
            android:layout_height="14dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/heart"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="2dp"
            >
        </ImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:layout_marginTop="3dp"
            android:text="会员专享"
            android:textSize="10dp"
            android:textColor="@color/colorWrite"
            android:background="@drawable/share_icon"

            >


        </TextView>

        <RelativeLayout
            android:id="@+id/show_3_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_toRightOf="@id/show3_iamge"
            android:layout_marginLeft="5dp"
            >
            <TextView
                android:id="@+id/show_3_tv_content"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:text="命运——官微第一次来就挑战我们吧"
                android:textSize="11dp"
                android:textColor="@color/colorBlack"
                android:maxLines="2"
                android:layout_marginLeft="3dp"
                >
            </TextView>

            <TextView
                android:id="@+id/show_3_tv_nums"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="940208"
                android:textSize="9dp"
                android:textColor="@color/moreDarkblack"
                android:layout_below="@+id/show_3_tv_content"
                android:layout_marginTop="38dp"
                >
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="综合评分"
                android:textSize="9dp"
                android:textColor="@color/moreDarkblack"
                android:layout_toRightOf="@+id/show_3_tv_nums"
                android:layout_below="@+id/show_3_tv_content"
                android:layout_marginTop="38dp"
                android:layout_marginLeft="@dimen/dp_10"
                >
            </TextView>

        </RelativeLayout>


        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_toRightOf="@+id/show_3_content"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/num3"
            >

        </ImageView>


    </RelativeLayout>



</LinearLayout>