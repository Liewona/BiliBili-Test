    <style name="bottom_normal_text">
        <item name="android:textColor">@color/nav_bar_text_color</item>
        <item name="android:textSize">@dimen/bar_font_size</item>
    </style>

    <style name="bottom_select_text">
        <item name="android:textColor">@color/nav_bar_text_select_color</item>
        <item name="android:textSize">@dimen/bar_font_size</item>
    </style>


    <style name="nav_bar_text_view">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/nav_bar_padding_size</item>
        <item name="android:paddingTop">@dimen/nav_bar_padding_size</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/nav_bar_click_ripple</item>
        <item name="android:textAlignment" tools:targetApi="jelly_bean_mr1">center</item>
        <item name="android:textSize">@dimen/bottom_nav_text_size</item>
    </style>

    <style name="tab_text_style">

        <item name="android:textColor">@color/nav_bar_text_color</item>
        <item name="android:textSize">@dimen/head_page_mini_nav_font_size</item>

    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">#FFFFFF</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
<!--        <item name="android:textColor">@color/nav_bar_text_color</item>-->
    </style>


    <style name="AppTheme.AppBarOverlay" parent="Theme.AppCompat.Light.DarkActionBar">
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="TabLayoutTextSize">
        <item name="android:textSize">15sp</item>
    </style>

