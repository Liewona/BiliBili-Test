<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:orientation="horizontal"
        >
    //追番菜单
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/menu_image_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/chase_menu_1"
                android:layout_gravity="center"

                >
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="纪录片"
                android:textSize="@dimen/dp_14"
                android:layout_gravity="center"
                >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/chase_menu_marginleft"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/movie_menu_1"
                android:layout_gravity="center"

                >
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电影"
                android:textSize="@dimen/dp_14"
                android:layout_gravity="center"
                >
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/chase_menu_marginleft"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/chase_menu_3"
                android:layout_gravity="center"

                >
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="电视剧"
                android:textSize="@dimen/dp_14"></TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/chase_menu_marginleft"
            >
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/movie_menu_2"
                android:layout_gravity="center"

                >
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="综艺"
                android:textSize="@dimen/dp_14"
                android:layout_gravity="center"
                >
            </TextView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="@dimen/chase_menu_marginleft"
            >
            <ImageView
                android:id="@+id/menu_image_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/chase_menu_5"
                android:layout_gravity="center"

                >
            </ImageView>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/chase_menu_5"
                android:textSize="@dimen/dp_14"
                android:layout_gravity="center"
                >
            </TextView>
        </LinearLayout>

</LinearLayout>




