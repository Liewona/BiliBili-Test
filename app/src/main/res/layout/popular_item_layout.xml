<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/popular_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:background="@color/colorWrite"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:weightSum="5">

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="2">
        <ImageView
            android:id="@+id/popular_item_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="2"
            android:scaleType="fitXY"
            android:src="@drawable/ic_hotbitmapgg_avatar" />

        <TextView
            android:id="@+id/popular_movie_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:text="10:23"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:padding="2dp"
            android:textSize="10dp"
            android:textColor="@color/colorWrite"
            android:background="@drawable/popular_item_movie_time_bg"/>

    </FrameLayout>



    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/popular_item_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="2"
            android:minLines="2"
            android:text="测试测试测试" />

        <TextView
            android:id="@+id/popular_click_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/popular_tag_click_bg"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="5万点击"
            android:textColor="@color/colorWrite"
            android:textSize="10sp" />

        <TextView
            android:id="@+id/popular_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:ellipsize="end"
            android:text="papi酱"
            android:textColor="#444343"
            android:textSize="12sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp">

            <TextView
                android:id="@+id/popular_review_and_retime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:text="99.9万观看·10小时前"
                android:textSize="12sp" />

            <ImageView
                android:id="@+id/popular_item_more_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                app:srcCompat="@drawable/ic_movie_click_mini_more" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>