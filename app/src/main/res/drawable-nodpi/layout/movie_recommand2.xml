                android:layout_height="wrap_content"
                android:text="13.5万追番"
                android:textSize="9dp"
                android:textColor="@color/darkBlack"
                android:layout_below="@+id/im_heart1"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="4dp"
