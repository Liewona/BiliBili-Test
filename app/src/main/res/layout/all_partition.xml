<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/all_partition_iv1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_category_t1" />
        <TextView
            android:id="@+id/all_partition_tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="番剧"
            android:textSize="15sp"
            />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <ImageView
                android:id="@+id/all_partition_iv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_category_t1"
                />
            <TextView
                android:id="@+id/all_partition_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="番剧"
                android:textSize="15sp"
               />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/all_partition_iv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_category_t1"
            />
        <TextView
            android:id="@+id/all_partition_tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="番剧"
            android:textSize="15sp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/all_partition_iv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_category_t1"
            />
        <TextView
            android:id="@+id/all_partition_tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="番剧"
            android:textSize="15sp"
           />
    </LinearLayout>


</LinearLayout>
